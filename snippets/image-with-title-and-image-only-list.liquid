{%- assign image_with_title_items = '' -%}
{%- assign image_only_items = '' -%}

{%- for childlink in link.links -%}
  {%- assign parts = childlink.title | split: '|' -%}
  {%- if parts.size >= 3 -%}
    {%- assign menu_type = parts[1] | strip -%}
    {%- capture menu_item -%}
      <a href="{{ childlink.url }}" class="menu-item-link">
        <div class="menu-item">
          <div class="menu-item-inner">
            <img
              src="{{ parts[2] | strip }}"
              alt="{{ parts[0] | strip }}"
              class="menu-item-image"
              data-menu-type="{{ menu_type }}"
            >
            {%- if menu_type == 'ImageWithTitle' -%}
              <p class="menu-item-title">{{ parts[0] | strip }}</p>
            {%- endif -%}
          </div>
        </div>
      </a>
    {%- endcapture -%}

    {%- if menu_type == 'ImageWithTitle' -%}
      {%- assign image_with_title_items = image_with_title_items | append: menu_item -%}
    {%- elsif menu_type == 'ImageOnly' -%}
      {%- assign image_only_items = image_only_items | append: menu_item -%}
    {%- endif -%}
  {%- endif -%}
{%- endfor -%}

<div
  id="HeaderMenu-MenuList-{{ forloop.index }}"
  class="
    header__submenu list-menu list-menu--disclosure  gradient caption-large motion-reduce global-settings-popup two-column-menu   color-{{ section.settings.menu_color_scheme }}
  "
  role="list"
  tabindex="-1"
>
  <div class="menu-content-wrapper">
    {%- if image_with_title_items != '' -%}
      <div class="menu-column menu-column-left">
        <div class="menu-grid">
          {{ image_with_title_items }}
        </div>
      </div>
    {%- endif -%}

    {%- if image_only_items != '' -%}
      <div class="menu-column menu-column-right">
        <div class="menu-list">
          {{ image_only_items }}
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

